{
  "name": "greenwood",
  "private": true,
  "description": "A modern and performant static site generator supporting Web Component based development.",
  "repository": "https://github.com/ProjectEvergreen/greenwood",
  "author": "Owen Buckley <owen@thegreenhouse.io>",
  "license": "MIT",
  "main": "./packages/cli/src/index.js",
  "workspaces": {
    "packages": [
      "packages/*",
      "www"
    ]
  },
  "scripts": {
    "lerna": "lerna",
    "clean": "rimraf ./**/.greenwood/** && rimraf ./**/public/** && rimraf ./coverage",
    "clean:deps": "rimraf **/node_modules/**",
    "lint": "eslint \"*.js\" \"./packages/**/**/*.js\" \"./test/*.js\" \"./www/**/**/*.js\"",
    "build": "yarn clean && node . build",
    "serve": "yarn build && cd ./public && ws",
    "develop": "yarn clean && node . develop",
    "test": "export BROWSERSLIST_IGNORE_OLD_DATA=true && yarn clean && nyc mocha",
    "test:tdd": "yarn test --watch"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "jsdom": "^14.0.0",
    "lerna": "^3.16.4",
    "mocha": "^6.1.4",
    "nyc": "^14.0.0",
    "rimraf": "^2.6.3"
  }
}

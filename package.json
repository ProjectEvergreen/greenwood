{
  "name": "greenwood",
  "version": "0.1.0",
  "description": "A modern and performant static site generator supporting Web Component based development.",
  "main": "packages/cli/index.js",
  "repository": "git@github.com:thescientist13/greenwood.git",
  "author": "Owen Bucklwy <owen@thegreenhouse.io>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./.greenwood && rimraf ./public",
    "build": "yarn clean && node ./packages/cli/index.js",
    "serve": "yarn build && cd ./public && ws",
    "dev": "yarn dev-build && concurrently \"yarn dev-serve\" \"yarn dev-watch\"",
    "dev-build": "export NODE_ENV=development && yarn build",
    "dev-watch": "nodemon -e js,md,css,html --exec 'yarn dev-build'",
    "dev-serve": "webpack-dev-server --config ./packages/cli/config/webpack.config.develop.js --open",
    "test": "mocha --timeout 15000 --recursive test"
  },
  "dependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-builtin-classes": "^0.6.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "colors": "^1.3.3",
    "concurrently": "^4.1.0",
    "css-loader": "^2.1.1",
    "css-to-string-loader": "^0.1.3",
    "cssnano": "^4.1.10",
    "eslint": "^5.15.3",
    "eslint-loader": "^2.1.2",
    "file-loader": "^3.0.1",
    "front-matter": "^3.0.1",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "glob-promise": "^3.4.0",
    "html-webpack-plugin": "^3.2.0",
    "jsdom": "^14.0.0",
    "lit-element": "^2.0.1",
    "lit-redux-router": "^0.8.3",
    "local-web-server": "^2.6.1",
    "mocha": "^6.0.2",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^3.0.0",
    "puppeteer": "^1.13.0",
    "pwa-helpers": "^0.9.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "rimraf": "^2.6.3",
    "wc-markdown-loader": "^0.0.6",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-merge": "^4.2.1"
  },
  "devDependencies": {
    "http-server": "^0.11.1"
  }
}
